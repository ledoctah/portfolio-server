{% extends "layout.njk" %}

{% block head %}

    <head>
        <title>Sobre - Matheus Ferreira</title>
    </head>

{% endblock %}

{% block content %}

        <div id="wrapper">
            <img src="{{about.avatar_url}}" alt="Imagem de perfil do {{about.name}}">
            <h1>{{about.name}}</h1>
            <h2>{{about.role}}</h2>
            <p>{{about.description}}</p>
        </div>

        <div id="links-footer" class="links">
            {% for link in about.links %}
                <a href="{{link.url}}" target="_blank">{{link.name}}</a>
            {% endfor %}
        </div>

{% endblock %}